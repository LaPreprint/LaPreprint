@article{Mitchell2020,
  title = {Temporal Autocorrelation: A Neglected Factor in the Study of Behavioral Repeatability and Plasticity},
  shorttitle = {Temporal Autocorrelation},
  author = {Mitchell, David J and Dujon, Antoine M and Beckmann, Christa and Biro, Peter A},

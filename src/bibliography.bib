  annotation = {NTRS Author Affiliations: Texas Univ. Health Science Center NTRS Document ID: 20030068205 NTRS Research Center: Johnson Space Center (JSC)},
  file = {/Users/roaldarbol/MEGA/Documents/papers/Wiederhold2003.pdf;/Users/roaldarbol/Zotero/storage/53TPDC7I/20030068205.html}
}


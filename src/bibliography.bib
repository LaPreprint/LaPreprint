@article{vanDusschoten2016,
  title = {Quantitative {{3D}} Analysis of Plant Roots Growing in Soil Using Magnetic Resonance Imaging},
  author = {{van Dusschoten}, Dagmar and Metzner, Ralf and Kochs, Johannes and Postma, Johannes A. and Pflugfelder, Daniel and B{\"u}hler, Jonas and Schurr, Ulrich and Jahnke, Siegfried},
  year = {2016},
  journal = {Plant Physiology},
  volume = {170},

@article{Tenczar2014,
  title = {Automated Monitoring Reveals Extreme Interindividual Variation and Plasticity in Honeybee Foraging Activity Levels},
  author = {Tenczar, Paul and Lutz, Claudia C. and Rao, Vikyath D. and Goldenfeld, Nigel and Robinson, Gene E.},

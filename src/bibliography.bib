@article{Dochtermann2019,
  title = {The Mean Matters: Going beyond Repeatability to Interpret Behavioural Variation},
  shorttitle = {The Mean Matters},
  author = {Dochtermann, Ned A. and Royaut{\'e}, Rapha{\"e}l},
  year = {2019},
  month = jul,
  journal = {Animal Behaviour},
  volume = {153},

@article{Kar2021a,
  title = {Individual Variation in Thermal Plasticity and Its Impact on Mass-Scaling},
  author = {Kar, Fonti and Nakagawa, Shinichi and Friesen, Christopher R. and Noble, Daniel W. A.},

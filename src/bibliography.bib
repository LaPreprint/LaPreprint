  pmid = {33931494},
  file = {/Users/roaldarbol/Zotero/storage/BU9K34YS/Fairhall - 2021 - In Silico Where Next.pdf;/Users/roaldarbol/Zotero/storage/3483IKAP/ENEURO.0131-21.html}
}

@article{Farashahi2018,
  title = {Dynamic Combination of Sensory and Reward Information under Time Pressure},
  author = {Farashahi, Shiva and Ting, Chih-Chung and Kao, Chang-Hao and Wu, Shih-Wei and Soltani, Alireza},
  year = {2018},
